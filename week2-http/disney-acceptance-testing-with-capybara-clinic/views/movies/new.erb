<h1>Add a movie here!</h1>

<%= @errors %>

<form action="/movies/new" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" placeholder="movie title">
  <br>

  <label for="release_year">Release Year</label>
  <input type="text" name="release_year" id="release_year" placeholder="movie release year">
  <br>

  <label for="runtime">Runtime</label>
  <input type="text" name="runtime" id="runtime" placeholder="movie runtime">
  <br>

  <input type="submit" value="Submit">
</form>
