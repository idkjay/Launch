<h1>Class:</h1>
<h2><%=@ship.ship_class%></h2>
<br>
<h1>Location:</h1>
<h2><%=@ship.ship_location%></h2>
<br>
<h1>Add New Crew Member to this Starship</h1>

<form method="POST" action="/crew-members">
  <input type="hidden" name="ship_id" value="<%=@ship.id%>">

  <label for="first_name">First Name:</label>
  <input type="text" name="first_name" value="<%=@first_name%>"><br>

  <label for="last_name">Last Name:</label>
  <input type="text" name="last_name" value="<%=@last_name%>"><br>

  <label for="specialty_division">Specialty Division:</label>
  <input type="text" name="specialty_division" value="<%=@specialty_division%>"><br>

  <button class="button" type="submit">Add Crew Member</button>
</form>

<br>

